<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Blok</title>
  </head>
  <body>
    <div class="main">
      <div class="navBar">
        <h1><a href="#">Blok</a></h1>
        <h2><a href="/new">New Bloks</a></h2>
      </div>
      <div class="mainblogs">
        <% blogss.forEach(blogs => { %>
        <div class="blogsCard">
          <div class="blogsImage">
            <img src="<%= blogs.image %>" alt="Picsum Images" />
          </div>
          <div class="blogsContent">
            <h5><%= blogs.title %></h5>
            <p><%= blogs.description %></p>
          </div>
          <div class="info">
            <p><%= blogs.author %></p>
            <p><%= blogs.created_on %></p>
          </div>
          <div class="blogsAction">
            <form action="/show/<%= blogs.id %>" method="get">
              <button class="seeButton" type="submit">See Blok</button>
            </form>
            <form
              action="/delete/<%= blogs.id %>"
              method="post"
              onsubmit="return confirm('Are You Sure?')"
            >
              <button class="deleteButton" type="submit">Delete Blok</button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
